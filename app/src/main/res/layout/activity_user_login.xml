<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ced5df"
    tools:context=".UserLogin">

    <ImageView
        android:id="@+id/BackArrow4"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/ic_baseline_arrow_back_24"
        android:contentDescription="Back Arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Login"
        android:textSize="30sp"
        android:textColor="#2645a3"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BackArrow4"/>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/LoginConstraint"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="160dp"
       android:background="@drawable/myshape_bg"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/Login">



       <TextView
           android:id="@+id/TextEmailLogin"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Email"
           android:textStyle="bold"
           android:textSize="15sp"
           android:layout_marginTop="40dp"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp"
           app:layout_constraintTop_toTopOf="@+id/LoginConstraint"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/LoginConstraint"/>

       <EditText
           android:id="@+id/EditEmailLogin"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:hint="  email"
           android:background="@drawable/edittext_bg"
           android:layout_marginTop="5dp"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/TextEmailLogin"/>

       <TextView
           android:id="@+id/TextPasswordLogin"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Password"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_marginTop="20dp"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/EditEmailLogin"/>

       <EditText
           android:id="@+id/EditPasswordLogin"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:background="@drawable/edittext_bg"
           android:hint="  enter a password"
           android:layout_marginTop="5dp"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/TextPasswordLogin"/>

       <ImageView
           android:id="@+id/CheckBox"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_marginStart="20dp"
           android:layout_marginLeft="20dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/EditPasswordLogin"
           android:background="@drawable/ic_baseline_check_box_outline_blank_24"/>

       <TextView
           android:id="@+id/RememberMe"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Remember me"
           android:layout_marginStart="10dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="10dp"
           app:layout_constraintStart_toEndOf="@+id/CheckBox"
           app:layout_constraintTop_toBottomOf="@+id/EditPasswordLogin"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Forgot passwprd?"
           android:textColor="#5bb9fc"
           android:layout_marginTop="10dp"
           android:layout_marginStart="110dp"
           android:layout_marginLeft="110dp"
           app:layout_constraintStart_toEndOf="@+id/RememberMe"
           app:layout_constraintTop_toBottomOf="@+id/EditPasswordLogin"
           app:layout_constraintEnd_toEndOf="@id/LoginConstraint"/>

       <Button
           android:id="@+id/ButtonLogin"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:text="Login to your Account"
           android:textColor="#ffffff"
           android:textAllCaps="false"
           android:layout_marginTop="60dp"
           android:background="@drawable/button_bg"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/EditPasswordLogin"/>

       <TextView
           android:id="@+id/NoAccount"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Don't have an Account?"
           android:textSize="25sp"
           android:layout_marginTop="20dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/ButtonLogin"/>
       
       <TextView
           android:id="@+id/AccountCreate"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Create an account"
           android:textSize="20sp"
           android:textColor="#5bb9fc"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/NoAccount"/>

       <ImageView
           android:layout_width="200dp"
           android:layout_height="150dp"
           android:background="@drawable/sortinglaundry"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@id/AccountCreate"
           app:layout_constraintBottom_toBottomOf="parent"/>
       
       















   </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>