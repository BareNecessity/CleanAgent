<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#297ed1"
    tools:context=".SignersAdded">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_signer_cl"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/doc_constraint"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ic_man_delivers"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/profile_signer_cl"
            app:layout_constraintStart_toStartOf="@id/profile_signer_cl"
            app:layout_constraintTop_toTopOf="@id/profile_signer_cl" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/checkbox_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_checked"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_signer_cl"
        app:layout_constraintStart_toStartOf="@+id/profile_signer_cl"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signers Added"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/checkbox_img"
        app:layout_constraintBottom_toBottomOf="@+id/checkbox_img"
        app:layout_constraintStart_toEndOf="@id/checkbox_img"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/john_smith_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="196dp"
        android:background="@drawable/signer_added"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/john_smith_profile_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/ic_user"
            app:layout_constraintEnd_toEndOf="@+id/john_smith_cl"
            app:layout_constraintStart_toStartOf="@+id/john_smith_cl"
            app:layout_constraintTop_toTopOf="@+id/john_smith_cl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="John, Smith"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/john_smith_cl"
            app:layout_constraintEnd_toEndOf="@+id/john_smith_cl"
            app:layout_constraintStart_toStartOf="@+id/john_smith_cl"
            app:layout_constraintTop_toBottomOf="@+id/john_smith_profile_img" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_signer_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/smith_profile"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/john_smith_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/add_sign_tv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_signer"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@+id/add_signer_cl"
            app:layout_constraintStart_toStartOf="@+id/add_signer_cl"
            app:layout_constraintBottom_toBottomOf="@+id/add_signer_cl"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add signer(s)"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@+id/add_sign_tv"
            app:layout_constraintBottom_toBottomOf="@+id/add_sign_tv"
            app:layout_constraintStart_toEndOf="@+id/add_sign_tv"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sign_docs_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/smith_profile"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/add_signer_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/sign_document_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_pencil"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@+id/sign_docs_cl"
            app:layout_constraintStart_toStartOf="@+id/sign_docs_cl"
            app:layout_constraintBottom_toBottomOf="@id/sign_docs_cl"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="Sign Documents"
            android:textColor="#000000"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@id/sign_document_img"
            app:layout_constraintStart_toEndOf="@+id/sign_document_img"
            app:layout_constraintTop_toTopOf="@+id/sign_document_img" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_seal_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/smith_profile"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/sign_docs_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/add_seal_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_seal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@+id/add_seal_cl"
            app:layout_constraintBottom_toBottomOf="@+id/add_seal_cl"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add your Seal"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@+id/add_seal_img"
            app:layout_constraintBottom_toBottomOf="@id/add_seal_img"
            app:layout_constraintStart_toEndOf="@id/add_seal_img"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/notarize"
        android:text="NOTARIZE"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/add_seal_cl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>












