<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#504de4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorProfiles">

    <ImageView
        android:id="@+id/ListImageDoctorProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_format_list_bulleted_24"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/DoctorProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor Profiles"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ListImageDoctorProfile"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_notifications_finance"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/DoctorConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/doctorprofile"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/DoctorProfile"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/DoctorDescription"
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:background="#ffffff"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/DoctorConstraint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/HospitalImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/hospital"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/Seth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seth Ambrose"
                android:textSize="23sp"
                android:textColor="#0d0c0b"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@+id/HospitalImage"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:id="@+id/Star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_star_24"
                android:layout_marginTop="7dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintTop_toBottomOf="@+id/HospitalImage"
                app:layout_constraintStart_toEndOf="@id/Seth"/>

            <ImageView
                android:id="@+id/StarTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/ic_baseline_star_24"
                app:layout_constraintTop_toBottomOf="@+id/HospitalImage"
                app:layout_constraintStart_toEndOf="@id/Star"/>

            <ImageView
                android:id="@+id/StarThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/ic_baseline_star_24"
                app:layout_constraintTop_toBottomOf="@+id/HospitalImage"
                app:layout_constraintStart_toEndOf="@id/StarTwo"/>

            <ImageView
                android:id="@+id/StarFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/ic_baseline_star_24"
                app:layout_constraintTop_toBottomOf="@+id/HospitalImage"
                app:layout_constraintStart_toEndOf="@id/StarThree"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/ic_baseline_star_24"
                app:layout_constraintTop_toBottomOf="@+id/HospitalImage"
                app:layout_constraintStart_toEndOf="@id/StarFour"/>


            <TextView
                android:id="@+id/Cardio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardio Expert"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@+id/Seth"
                app:layout_constraintStart_toStartOf="parent"/>


            <TextView
                android:id="@+id/DoctorAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textSize="23sp"
                android:textColor="#0d0c0b"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/Cardio"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/SanFrancisco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="!23A, San Francisco, United States"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@+id/DoctorAddress"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/DoctorsPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone:"
                android:textSize="23sp"
                android:textColor="#0d0c0b"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@+id/SanFrancisco"
                app:layout_constraintStart_toStartOf="parent"/>


            <TextView
                android:id="@+id/PhoneDoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(+3)  3490 9029 3974"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@+id/DoctorsPhone"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/Experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experience"
                android:textColor="#0d0c0b"
                android:textSize="23sp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/PhoneDoc"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/Duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_15_years_as_surgeon_10_cardio"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/Experience"
                app:layout_constraintStart_toStartOf="parent"/>


            <TextView
                android:id="@+id/Certificate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Certificate"
                android:textSize="23sp"
                android:textColor="#0d0c0b"
                android:layout_marginTop="15sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@+id/Duration"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/Awards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All USA Council Awards"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@+id/Certificate"
                app:layout_constraintStart_toStartOf="parent"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/appointment"
                android:text="Book Appointment"
                android:textColor="#ffffff"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/Awards"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>



            </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/DocCircle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/doc"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/DoctorDescription">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_person_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_homewhite"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/DocCircle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_settings_24"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/DocCircle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>