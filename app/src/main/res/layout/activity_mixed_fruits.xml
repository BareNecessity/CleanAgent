<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MixedFruits">

    <ImageView
        android:id="@+id/BackMixedFruits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_arrow_back_mixed_fruits"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/MixFruitsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mixed Fruits"
        android:textSize="30sp"
        android:textColor="#0d0c0b"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/BackMixedFruits"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_shopping_cart_24"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/FruitBasket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fruits"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/MixFruitsText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/BestMixFruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best Mixed Fruits"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#0d0c0b"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/FruitBasket"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/OrderWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordered 500G + 500G"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/BestMixFruit"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/AboutMixedFruits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="18sp"
        android:textColor="#f6ae7e"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/OrderWeight"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/ReviewFruits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reviews"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/AboutMixedFruits"
        app:layout_constraintBottom_toBottomOf="@id/AboutMixedFruits"
        app:layout_constraintStart_toEndOf="@+id/AboutMixedFruits"/>

    <TextView
        android:id="@+id/DetailsFruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@+id/AboutMixedFruits"
        app:layout_constraintBottom_toBottomOf="@id/AboutMixedFruits"
        app:layout_constraintStart_toEndOf="@+id/ReviewFruits"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Sales"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/AboutMixedFruits"
        app:layout_constraintBottom_toBottomOf="@id/AboutMixedFruits"
        app:layout_constraintStart_toEndOf="@id/DetailsFruit"/>

    <TextView
        android:id="@+id/text_ipsum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There are so many variations of passages of lorems is\nipsium there available, but the majority there haven't\nsuffered alterations in some form by their injected\nhumors orrandomised words which don't look even\nslightly believable. If you are going to use a passage\nLorem Ipsium you will nedd."
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/AboutMixedFruits"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/add_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_minus_button"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/text_ipsum_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/add_img"
        app:layout_constraintBottom_toBottomOf="@id/add_img"
        app:layout_constraintStart_toEndOf="@id/add_img"/>

    <ImageView
        android:id="@+id/minus_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_addplus"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/add_img"
        app:layout_constraintBottom_toBottomOf="@id/add_img"
        app:layout_constraintStart_toEndOf="@+id/number_tv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$124.00"
        android:textSize="25sp"
        android:textColor="#fe6f00"
        android:textStyle="bold"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintTop_toTopOf="@+id/add_img"
        app:layout_constraintBottom_toBottomOf="@id/add_img"
        app:layout_constraintStart_toEndOf="@+id/minus_img"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_constraint"
        android:layout_marginTop="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/text_ipsum_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/add_cart_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_add_to_cart"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="85dp"
            android:layout_marginEnd="85dp"
            app:layout_constraintTop_toTopOf="@id/button_constraint"
            app:layout_constraintBottom_toBottomOf="@id/button_constraint"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/button_constraint"
            app:layout_constraintBottom_toBottomOf="@id/button_constraint"
            app:layout_constraintStart_toEndOf="@id/add_cart_img"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    








</androidx.constraintlayout.widget.ConstraintLayout>