<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MixedFruits">

    <ImageView
        android:id="@+id/BackMixedFruits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_arrow_back_mixed_fruits"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/MixFruitsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mixed Fruits"
        android:textSize="30sp"
        android:textColor="#0d0c0b"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/BackMixedFruits"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_shopping_cart_24"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/FruitBasket"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/fruits"
        app:layout_constraintTop_toBottomOf="@+id/MixFruitsText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/BestMixFruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best Mixed Fruits"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#0d0c0b"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/FruitBasket"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/OrderWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordered 500G + 500G"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/BestMixFruit"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="18sp"
        android:textColor=""


        app:layout_constraintTop_toBottomOf="@+id/OrderWeight"
        app:layout_constraintStart_toStartOf="parent"/>







</androidx.constraintlayout.widget.ConstraintLayout>